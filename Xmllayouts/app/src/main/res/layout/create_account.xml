<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/createaccountTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:gravity="center"
        android:textSize="40sp"
        android:clickable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Username"
        android:gravity="center"
        android:textSize="32sp"
        android:clickable="true"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/passwordTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:gravity="center"
        android:textSize="32sp"
        android:clickable="true"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/confpasswordTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/confpasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:gravity="center"
        android:textSize="32sp"
        android:clickable="true"
        android:layout_above="@+id/emailTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:gravity="center"
        android:textSize="32sp"
        android:clickable="true"
        android:layout_above="@+id/searchTextButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />


    <Button
        android:id="@+id/searchTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp" />

</RelativeLayout>