<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/primary_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_tv" />

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_bio"
        android:id="@+id/edit_bio_button"
        android:layout_below="@+id/trades_button"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="italic" />

    <Button
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trades"
        android:id="@+id/trades_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="italic" />

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inventory"
        android:id="@+id/inventory_button"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_below="@+id/edit_bio_button"
        android:layout_centerHorizontal="true"
        />

</LinearLayout>



