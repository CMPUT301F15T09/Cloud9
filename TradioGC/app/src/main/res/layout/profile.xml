<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/Profile_layout">

    <ImageView
        android:contentDescription="@string/description"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/profile_image_view" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/john_smith"
        android:id="@+id/profile_name_text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/profile_image_view"
        android:layout_toEndOf="@+id/profile_image_view"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/edmonton"
        android:id="@+id/profile_location_text"
        android:layout_below="@+id/profile_name_text"
        android:layout_toRightOf="@+id/profile_image_view"
        android:layout_toEndOf="@+id/profile_image_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/bio_john_smith"
        android:id="@+id/profile_bio_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_image_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:textIsSelectable="true" />

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_bio"
        android:id="@+id/edit_bio_button"
        android:layout_below="@+id/trades_button"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="italic" />

    <Button
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trades"
        android:id="@+id/trades_button"
        android:layout_below="@id/profile_bio_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="italic" />

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inventory"
        android:id="@+id/inventory_button"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_below="@+id/edit_bio_button"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
